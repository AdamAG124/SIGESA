{
  "name": "sigesa",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^32.3.3",
    "electron-builder": "^26.0.12",
    "standard": "^17.1.2"
  },
  "eslintConfig": {
    "extends": "standard"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "electron-store": "^10.0.0",
    "exceljs": "^4.4.0",
    "install": "^0.13.0",
    "mysql2": "^3.14.1",
    "npm": "^10.8.3",
    "pdfkit": "^0.13.0",
    "pdfkit-table": "^0.1.99",
    "sweetalert2": "^11.14.1"
  },
  "description": "",
  "build": {
    "appId": "com.sigesa.app",
    "productName": "Sigesa",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/assets/img/logo.icns",
      "category": "public.app-category.productivity",
      "entitlements": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        "portable"
      ],
      "icon": "public/assets/img/logo.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "public/assets/img/logo.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Sigesa",
      "installerIcon": "public/assets/img/logo.ico",
      "license": "LICENSE"
    },
    "dmg": {
      "window": {
        "width": 540,
        "height": 380
      }
    }
  }
}
